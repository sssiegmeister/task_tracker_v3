<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :user %>
  <%= text_input f, :user %>
  <%= error_tag f, :user %>

  <%= label f, :complete %>
  <%= checkbox f, :complete %>
  <%= error_tag f, :complete %>

  <%= label f, :title %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :description %>
  <%= text_input f, :description %>
  <%= error_tag f, :description %>

  <%= label f, :minutes_worked_on %>
  <%= number_input f, :minutes_worked_on %>
  <%= error_tag f, :minutes_worked_on %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
